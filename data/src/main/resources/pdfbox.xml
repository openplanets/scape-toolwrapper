<?xml version="1.0" encoding="UTF-8"?>
<tool xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://scape-project.eu/tool tool-1.0_draft.xsd"
	xmlns="http://scape-project.eu/tool" xmlns:xlink="http://www.w3.org/1999/xlink"
	name="PDFBox" version="0.10" homepage="http://pdfbox.apache.org/"
	schemaVersion="1.0">

	<installation>
		<dependency operatingSystemName="Debian">pdfbox-app-cli</dependency>
		<license type="Apache Licence 2.0">Apache License, Version 2.0</license>
	</installation>

	<otherProperties>
		<property name="cost">0</property>
		<property name="rating">5</property>
	</otherProperties>

	<operations>
		<operation name="pdf2txt">
			<description>Converts a PDF to a TXT (for more detailed info see: http://pdfbox.apache.org/commandlineutilities/ExtractText.html)</description>
			<command>pdfbox-app-cli ExtractText ${params} ${input} ${output}</command>
			<inputs>
				<input name="input" required="true">
					<description>Reference to input file</description>
				</input>
				<parameter name="params" required="false">
					<description>Additional conversion parameters</description>
				</parameter>
			</inputs>

			<outputs>
				<output name="output" required="true">
					<description>Reference to output file</description>
					<extension>txt</extension>
				</output>
			</outputs>
		</operation>

		<operation name="txt2pdf">
			<description>Converts a TXT to a PDF (for more detailed info see: http://pdfbox.apache.org/commandlineutilities/TextToPDF.html)</description>
			<command>pdfbox-app-cli TextToPDF ${params} ${output} ${input}</command>
			<inputs>
				<input name="input" required="true">
					<description>Reference to input file</description>
				</input>
				<parameter name="params" required="false">
					<description>Additional conversion parameters</description>
				</parameter>
			</inputs>

			<outputs>
				<output name="output" required="true">
					<description>Reference to output file</description>
					<extension>pdf</extension>
				</output>
			</outputs>
		</operation>
		<operation name="pdfs2pdf">
			<description>Merges a bunch of PDFs into a single PDF (for more detailed info see: http://pdfbox.apache.org/commandlineutilities/PDFMerger.html)</description>
			<command>pdfbox-app-cli PDFMerger ${input} ${output}</command>
			<inputs>
				<input name="input" required="true">
					<description>Reference to input file</description>
				</input>
				<parameter name="params" required="false">
					<description>Additional conversion parameters</description>
				</parameter>
			</inputs>

			<outputs>
				<output name="output" required="true">
					<description>Reference to output file</description>
					<extension>pdf</extension>
				</output>
			</outputs>
		</operation>
		<operation name="2pdfs2pdf">
			<description>Merges two PDFs into a single PDF (for more detailed info see: http://pdfbox.apache.org/commandlineutilities/PDFMerger.html)</description>
			<command>pdfbox-app-cli PDFMerger ${input1} ${input2} ${output}</command>
			<inputs>
				<input name="input1" required="true">
					<description>Reference to the first input file</description>
				</input>
				<input name="input2" required="true">
					<description>Reference to the second input file</description>
				</input>
				<parameter name="params" required="false">
					<description>Additional conversion parameters</description>
				</parameter>
			</inputs>

			<outputs>
				<output name="output" required="true">
					<description>Reference to output file</description>
					<extension>pdf</extension>
				</output>
			</outputs>
		</operation>
	</operations>
</tool>
